<Window x:Class="CMCSAPP_PROTOTYPE.TrackStatusWindow"
  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Track Claim Status" Height="300" Width="500">
    <Grid>
        <DataGrid Name="ClaimStatusDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" />
                <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Approver" Binding="{Binding ApproverName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
