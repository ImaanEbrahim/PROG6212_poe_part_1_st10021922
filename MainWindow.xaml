<Window x:Class="CMCSAPP_PROTOTYPE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LectraClaim CMCS Dashboard" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Submit Claim" Width="200" Margin="10" Click="OpenSubmitClaimWindow_Click"/>
            <Button Content="Manage Claims" Width="200" Margin="10" Click="OpenManageClaimsWindow_Click"/>
            <Button Content="Upload Documents" Width="200" Margin="10" Click="OpenUploadDocumentsWindow_Click"/>
            <Button Content="Track Claim Status" Width="200" Margin="10" Click="OpenTrackStatusWindow_Click"/>
        </StackPanel>
    </Grid>
</Window>

