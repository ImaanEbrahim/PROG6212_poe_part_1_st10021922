<Window x:Class="CMCSAPP_PROTOTYPE.SubmitClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Submission Date:" />
            <DatePicker Name="SubmissionDatePicker" />

            <TextBlock Text="Hours Worked:" />
            <TextBox Name="HoursWorkedTextBox" />

            <TextBlock Text="Hourly Rate:" />
            <TextBox Name="HourlyRateTextBox" />

            <Button Name="SubmitButton" Content="Submit Claim" Margin="10" Click="SubmitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
