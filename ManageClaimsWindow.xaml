<Window x:Class="CMCSAPP_PROTOTYPE.ManageClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Claims" Height="400" Width="600">
    <Grid>
        <DataGrid Name="ClaimsDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate}" />
                <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" />
                <DataGridTextColumn Header="Hourly Rate" Binding="{Binding HourlyRate}" />
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
